<h1>New Task</h1>

<form action="/tasks" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for='task_title'><strong>Title</strong></label>
  <input type="text" name="task[title]" id name='task_title'>
  <label for='task_details'><strong>Details</strong></label>
  <input type="text" name="task[details]" id name='task_details'>
  <input type="submit" value="Add task">
</form>

<%= link_to "Go back to all tasks", tasks_path %>
