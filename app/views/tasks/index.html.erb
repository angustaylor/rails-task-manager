<h1>My Tasks</h1>

<ul style="list-style:none; padding-left:0">
  <% @tasks.each do |task| %>
    <li><input type="checkbox" name="completed">
      <%= link_to task.title, task_path(task) %>
      <%= link_to "delete", method: :delete %></li>
  <% end %>
</ul>

<%= link_to "Add task", new_task_path %>
